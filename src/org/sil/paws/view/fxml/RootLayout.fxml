<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<?import org.controlsfx.control.StatusBar?>

<!-- <?import org.controlsfx.control.StatusBar?> -->

<BorderPane prefHeight="660.0" prefWidth="1000.0" stylesheets="@paws.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sil.paws.view.RootLayoutController">
   <top>
      <VBox prefHeight="75.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="menuBar">
              <menus>
                <Menu mnemonicParsing="true" text="%menu.file">
                  <items>
                    <MenuItem accelerator="Ctrl+n" mnemonicParsing="true" onAction="#handleNewLanguage" text="%menu.new" />
					<MenuItem accelerator="Ctrl+o" mnemonicParsing="true" onAction="#handleOpenLanguage" text="%menu.open" />
					<MenuItem mnemonicParsing="true" onAction="#handleCloseLanguage" text="%menu.close" />
					<MenuItem mnemonicParsing="true" onAction="#handleSaveAs" text="%menu.saveas" />
					<SeparatorMenuItem />
					<MenuItem accelerator="Ctrl+s" mnemonicParsing="true" onAction="#handleSaveLanguage" text="%menu.generatefiles" />
					<MenuItem mnemonicParsing="true" onAction="#handleFileLocations" text="%menu.filelocations" />
                    <SeparatorMenuItem />
                    <MenuItem mnemonicParsing="true" onAction="#handleExit" text="%menu.exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%menu.edit" onShown="#handleShowingEditMenu">
                  <items>
					<MenuItem mnemonicParsing="true" onAction="#handleUndo" text="%menu.undo" fx:id="menuItemEditUndo" accelerator="Ctrl+z" />
					<MenuItem mnemonicParsing="true" onAction="#handleRedo" text="%menu.redo" fx:id="menuItemEditRedo" accelerator="Ctrl+y" />
					<SeparatorMenuItem />
					<MenuItem mnemonicParsing="true" onAction="#handleCut" text="%menu.cut" fx:id="menuItemEditCut" accelerator="ctrl+x" />
					<MenuItem mnemonicParsing="true" onAction="#handleCopy" text="%menu.copy" fx:id="menuItemEditCopy" accelerator="ctrl+c" />
					<MenuItem mnemonicParsing="true" onAction="#handlePaste" text="%menu.paste" fx:id="menuItemEditPaste" accelerator="ctrl+v" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%menu.language">
                  <items>
                    <MenuItem mnemonicParsing="true" onAction="#handleLanguage" text="%menu.languageproperties" />
                    <MenuItem mnemonicParsing="true" onAction="#handleFileLocations" text="%menu.filelocations" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%menu.view">
                  <items>
                    <CheckMenuItem mnemonicParsing="true" onAction="#handleMenuShowStatusBar" text="%menu.showstatusbar" />
					<SeparatorMenuItem />
					<MenuItem mnemonicParsing="true" onAction="#handleBack" text="%menu.back" fx:id="menuItemViewBack" accelerator="alt+left" />
					<MenuItem mnemonicParsing="true" onAction="#handleForward" text="%menu.forward" fx:id="menuItemViewForward" accelerator="alt+right" />
					<MenuItem mnemonicParsing="true" onAction="#handleRefresh" text="%menu.refresh" accelerator="F5"/>
                  </items>
                </Menu>
				<Menu mnemonicParsing="true" text="%menu.settings">
				  <items>
					<MenuItem mnemonicParsing="true" onAction="#handleChangeInterfaceLanguage" text="%menu.changeinterfacelanguage" />
				  </items>
				</Menu>
                <Menu mnemonicParsing="true" text="%menu.help">
                  <items>
                    <MenuItem mnemonicParsing="true" onAction="#handleResources" text="%menu.resources" />
                    <SeparatorMenuItem />
                    <MenuItem mnemonicParsing="true" onAction="#handleAbout" text="%menu.about" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0" styleClass="toolbarbutton" BorderPane.alignment="CENTER">
              <items>
                    <Button fx:id="buttonToolbarFileNew" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleNewLanguage" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarFileOpen" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleOpenLanguage" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarFileSave" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleSaveLanguage" prefHeight="23.0" prefWidth="17.0" text="" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
					<Button fx:id="buttonToolbarEditCut" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleCut" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarEditCopy" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleCopy" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarEditPaste" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handlePaste" prefHeight="23.0" prefWidth="17.0" text="" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
					<Button fx:id="buttonToolbarBack" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleBack" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarForward" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleForward" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarRefresh" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleRefresh" prefHeight="23.0" prefWidth="17.0" text="" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <bottom>
	   <VBox>
		  <StatusBar prefHeight="25.0" prefWidth="800.0" styleClass="toolbarbutton"
				BorderPane.alignment="CENTER" fx:id="statusBar">
		  </StatusBar>
	   </VBox>
   </bottom>
   <center>
     <AnchorPane prefHeight="533.0" prefWidth="637.0">
	   <children>
		 <WebView fx:id="browser" layoutX="1.0" layoutY="0.0" prefHeight="326.0" prefWidth="637.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
	   </children>
	 </AnchorPane>
   </center>
</BorderPane>
