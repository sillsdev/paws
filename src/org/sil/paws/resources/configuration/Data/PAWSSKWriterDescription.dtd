<?xml version="1.0" encoding="UTF-8"?>
<!--DTD generated by XML Spy v3.5 (http://www.xmlspy.com)-->
<!-- DTD for PAWS Starter Kit Writer Page Description  -->
<!-- Entity definitions -->
<!ENTITY % chunk "p | example | table | tablenumbered | ol | ul | dl">
<!ENTITY % embedded "case | text | langData | langName | gloss | exampleRef | sectionRef | appendixRef | comment | object | br | category | feature | img | translatorInstruction | citation | endnote | contentCheckBoxOther">
<!ENTITY nbsp "&#160;">
<!ELEMENT and EMPTY>
<!ELEMENT appendix (secTitle, (%chunk; | section1 | section2)*)>
<!ATTLIST appendix
	id ID #REQUIRED
	label CDATA #IMPLIED
>
<!ELEMENT appendixRef EMPTY>
<!ATTLIST appendixRef
	app IDREF #REQUIRED
>
<!ELEMENT br EMPTY>
<!ELEMENT caption (content | %embedded;)*>
<!-- content -->
<!ELEMENT case (caseText*)>
<!ATTLIST case
  element CDATA #REQUIRED
  attr CDATA #REQUIRED
>
<!ELEMENT caseText (#PCDATA|case)*>
<!ATTLIST caseText
  value CDATA #REQUIRED
>
<!ELEMENT category (#PCDATA)>
<!-- content is the name of the syntactic category -->
<!ELEMENT citation EMPTY>
<!ATTLIST citation
    ref IDREF #REQUIRED
    page CDATA #IMPLIED
    author (yes | no) "yes"
    paren (both | none | initial | final) #IMPLIED
>
<!ELEMENT col (content | langData | gloss | case)*>
<!-- the content of rowspan actually gets calculated ono the fly; so just use any number in the description page -->
<!ATTLIST col
	align (left | center | right | justify) "left"
  class CDATA #IMPLIED
  show IDREF #IMPLIED
  exampleLoc CDATA #IMPLIED
  colspan CDATA #IMPLIED
  rowspan CDATA #IMPLIED
 >
<!-- comments are for the author.  The intent is that they will not show up in
	 the formatted version of the paper. -->
<!ELEMENT comment (#PCDATA | %embedded;)*>
<!ELEMENT content (#PCDATA)>
<!ELEMENT contentCheckBoxOther EMPTY>
<!ATTLIST contentCheckBoxOther
   contentLoc CDATA #REQUIRED
>
<!-- definition description -->
<!ELEMENT dd (content | %embedded; | %chunk;)*>
<!-- content -->
<!ATTLIST dd
  show IDREF #IMPLIED
>
<!-- definition list -->
<!ELEMENT dl (dt | dd)*>
<!ATTLIST dl
  show IDREF #IMPLIED
>
<!-- definition term -->
<!ELEMENT dt (content | %embedded; | %chunk;)*>
<!-- content -->
<!ATTLIST dt
  show IDREF #IMPLIED
>
<!ELEMENT endnote (p)*>
<!ATTLIST endnote
    id ID #REQUIRED
>
<!ELEMENT example (interlinear | table)>
<!ATTLIST example
  num ID #IMPLIED
  show IDREF #IMPLIED
  contentType IDREF #IMPLIED
>
<!-- references to example numbers or example number/letter.
	 Use just num for the example number.
	 Use just letter for an example number/letter combination.
	 One may include parentheses around the date ("both", the default), or
	   one may have no parentheses or just initial or just final.
	 One may append some punctuation (punct) to the end of the number.
	 One may only include the letter (and not the number). -->
<!ELEMENT exampleRef EMPTY>
<!ATTLIST exampleRef
  num CDATA #IMPLIED
  letter CDATA #IMPLIED
  equal (no | yes) "no"
  punct CDATA #IMPLIED
  paren (none | both | initial | final) #IMPLIED
  letterOnly (no | yes) "no"
>
<!ELEMENT feature (#PCDATA)>
<!-- gloss is a way to tag some text as being a gloss in a particular language. -->
<!ELEMENT gloss (content | %embedded;)*>
<!-- content -->
<!ELEMENT headerCol (#PCDATA| langName|object)*>
<!ATTLIST headerCol
	align (left | center | right | justify) "left"
  class CDATA #IMPLIED
  show IDREF #IMPLIED
>
<!ELEMENT headerRow (headerCol+)>
<!ATTLIST headerRow
  class CDATA #IMPLIED
  show IDREF #IMPLIED
>
<!ELEMENT img EMPTY>
<!ATTLIST img
  src CDATA #REQUIRED
>
<!ELEMENT interlinear EMPTY>
<!ATTLIST interlinear
  exampleLoc CDATA #REQUIRED
>
<!-- langData is a way to tag some text as belonging to a particular language. -->
<!ELEMENT langData (#PCDATA)>
<!ATTLIST langData
	lang CDATA #IMPLIED
>
<!-- content -->
<!ELEMENT langName EMPTY>
<!-- object is a generic way to tag a special kind of object.  One can
	 use the CSS stylesheet to format these objects by referring to the
	 class attribute.  -->
<!-- list element -->
<!ELEMENT li (content | %embedded; | %chunk;)*>
<!-- content -->
<!ATTLIST li
  id ID #IMPLIED
  show IDREF #IMPLIED
>
<!ELEMENT object (content | %embedded;)*>
<!-- content -->
<!ATTLIST object
  class CDATA #REQUIRED
>
<!-- ordered list -->
<!ELEMENT ol (li | ol | ul)*>
<!ATTLIST ol
  show IDREF #IMPLIED
>
<!ELEMENT or EMPTY>
<!ELEMENT p (content | %embedded;)*>
<!-- content -->
<!ATTLIST p
  style CDATA #IMPLIED
  show IDREF #IMPLIED
  contentType IDREF #IMPLIED
>
<!ELEMENT portion ((appendix+ |section1+), showWhen*)>
<!ELEMENT row (headerCol?, col+)>
<!ATTLIST row
  class CDATA #IMPLIED
  show IDREF #IMPLIED
>
<!ELEMENT secTitle (#PCDATA | %embedded;)*>
<!ELEMENT section1 (secTitle, (%chunk; | section2)*)>
<!ATTLIST section1
  id ID #REQUIRED
  show IDREF #IMPLIED
>
<!ELEMENT section2 (secTitle, (%chunk; | section3)*)>
<!ATTLIST section2
  id ID #REQUIRED
  show IDREF #IMPLIED
>
<!ELEMENT section3 (secTitle, (%chunk; | section4)*)>
<!ATTLIST section3
  id ID #REQUIRED
  show IDREF #IMPLIED
>
<!ELEMENT section4 (secTitle, (%chunk; | section5)*)>
<!ATTLIST section4
  id ID #REQUIRED
  show IDREF #IMPLIED
>
<!ELEMENT section5 (secTitle, (%chunk; | section6)*)>
<!ATTLIST section5
  id ID #REQUIRED
  show IDREF #IMPLIED
>
<!ELEMENT section6 (secTitle, (%chunk;)*)>
<!ATTLIST section6
  id ID #REQUIRED
  show IDREF #IMPLIED
>
<!-- references to sections, etc. -->
<!ELEMENT sectionRef EMPTY>
<!ATTLIST sectionRef
  sec CDATA #REQUIRED
>
<!ELEMENT showWhen ((whenValue | useShowWhen), ((or | and), (whenValue | useShowWhen))*)>
<!ATTLIST showWhen
  id ID #REQUIRED
>
<!ELEMENT table (caption?, headerRow*, row+)>
<!ATTLIST table
  border CDATA #IMPLIED
  class CDATA #IMPLIED
  show IDREF #IMPLIED
>
<!ELEMENT tablenumbered (table)>
<!ATTLIST tablenumbered
  id ID #IMPLIED
  contentType IDREF #IMPLIED
  show IDREF #IMPLIED
>
<!ELEMENT text (content | %embedded;)*>
<!ATTLIST text
  show IDREF #REQUIRED
>
<!ELEMENT translatorInstruction (#PCDATA)>

<!ELEMENT whenValue EMPTY>
<!ATTLIST whenValue
  element CDATA #REQUIRED
  attr CDATA #IMPLIED
  value CDATA #REQUIRED
  negateValue (yes | no) "no"
>
<!-- unordered list -->
<!ELEMENT ul (li | ol | ul)*>
<!ATTLIST ul
  show IDREF #IMPLIED
  contentType IDREF #IMPLIED
>
<!ELEMENT useShowWhen EMPTY>
<!ATTLIST useShowWhen
  show IDREF #REQUIRED
>
