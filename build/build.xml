<?xml version="1.0" encoding="UTF-8"?>
	<project name="paws" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
				<file name="${basedir}"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Andy Black\Favorites\Downloads\Eclipse\Eclipse4.4\eclipse\plugins">
				<filename name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Andy Black\Documents\Eclipse4.4Workspace\paws\silutilities">
				<filename name="silutilities-1.0.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Andy Black\Favorites\Downloads\Eclipse\Eclipse4.4\eclipse\plugins\org.junit_4.11.0.v201303080030">
				<filename name="junit.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Andy Black\Documents\Eclipse4.4Workspace\paws\ControlsFX">
				<filename name="controlsfx-8.40.12.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Andy Black\Documents\Eclipse4.4Workspace\paws\saxon">
				<filename name="saxon9he.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="C:\Users\Andy Black\Documents\Eclipse4.4Workspace\paws">
				<include name="src/**" />
			</fileset>
		</copy>
		<copy todir="project">
			<fileset dir="C:\Users\Andy Black\Documents\Eclipse4.4Workspace\paws">
				<include name="test/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
				<include name="silutilities-1.0.0.jar"/>
				<include name="junit.jar"/>
				<include name="saxon9he.jar"/>
				<include name="controlsfx-8.40.12.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/test">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1252">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/test">
			<exclude name="**/*.java"/>
		</fileset>
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="paws.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
			<fx:fileset dir="dist" includes="resources/**"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="PAWS"
			mainClass="org.sil.paws.MainApp"
			version="1.0.0"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/paws.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="SIL International"/>
				<attribute name="Implementation-Title" value="PAWS"/>
				<attribute name="Implementation-Version" value="1.0.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="paws" nativeBundles="exe"
			verbose="true"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="paws" vendor="SIL International"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
			<fx:preferences
				shortcut="true"
				menu="true"
			/>
		</fx:deploy>
	
	
	</target>
</project>
